# Environment configuration for production
# Copy to .env.prod and adjust values as needed

# Data directory (relative to app.py)
DATA_DIR=/app/data

# Inactivity filtering
INACTIVE_HIDE_DAYS=180
DEFAULT_INCLUDE_INACTIVE=false

# Recency weights
RECENT_K=10
RECENT_SHARE=0.70

# Tapered weights (v5 algorithm)
MAX_GAMES_FOR_RANK=30
FULL_WEIGHT_GAMES=25
DAMPEN_START=25
DAMPEN_END=30
DAMPEN_FACTOR=0.8
TAPER_ENABLED=true

# File preferences (comma-separated)
RANKINGS_FILE_PREFERENCE=v5,v4,v3,legacy

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Logging level (WARNING for production)
LOG_LEVEL=WARNING

# CORS origins (restrict in production)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
